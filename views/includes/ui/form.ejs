<div class="row justify-content-center">
    <div class="col-12">
        <form action="/admin/category/animals/actions/add" method="POST" enctype="multipart/form-data">
               <div class="row">
                  <div class="mb-3 col-lg-6 ">
                     <label for="exampleFormControlInput1" class="form-label">Name</label>
                     <input type="text" class="form-control" id="name" name="name">
                   </div>
                   <div class="mb-3 col-lg-6">
                     <label for="exampleFormControlInput1" class="form-label">Image</label>
                     <input type="file" class="form-control custom-file-upload" id="image" name="image">
                   </div>
               </div>
              <div class="row">
               <div class="mb-3 col-lg-4">
                  <label for="exampleFormControlInput1" class="form-label">Age</label>
                  <input required type="number" step="0.01" class="form-control" id="age" name="age">
               </div>
               <div class="mb-3 col-lg-4">
                  <label for="exampleFormControlInput1" class="form-label">Breed</label>
                  <input required type="text" class="form-control" id="breed" name="breed">
               </div>
               <div class="mb-3 col-lg-4">
                  <label for="exampleFormControlInput1" class="form-label">Height</label>
                  <input required type="number" class="form-control" id="height" name="height">
               </div>
              </div>
              <div class="row">
               <div class="mb-3 col-lg-6">
                  <label for="exampleFormControlInput1" class="form-label">Weight</label>
                  <input required type="number" class="form-control" id="weight" name="weight">
               </div>
               <div class="mb-3 col-lg-6">
                  <label for="exampleFormControlInput1" class="form-label">Color</label>
                  <input required type="text" class="form-control" id="color" name="color">
               </div>
              </div>
              <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">Description</label>
                <textarea  required type="text" rows="5" class="form-control" id="description" name="description"></textarea>
              </div>
              <input type="hidden" value="<%= csrfToken%>" name="_csrf">
              
              <button type="submit" class="btn btn-primary">List Now</button>
        </form>
    </div>
  </div>
</div>